page{height: 100%;}
.main{background-color:#fff;height:100%;padding: 30rpx;box-sizing:border-box;position: relative;}
.con1{padding:40rpx 30rpx;background-color:#f8f8f8;border-radius:16rpx;}
.con2{padding:36rpx 20rpx 24rpx;background-color:#f8f8f8;border-radius:16rpx;margin-top:30rpx;}
.btn{height: 88rpx; box-shadow: 0 0 16rpx 0 rgba(230, 229, 235, 50);background-color: #BE8531;color: #fff;border-radius: 10rpx;border:#BE8531 2rpx solid;margin-top: 60rpx;font-size: 34rpx}
.icon{display:block;width:1rpx;height:1rpx;}
.balance{color:#BE8531;font-size:50rpx;font-weight: bold;}
.tit{color:#333333;font-size:28rpx;}
.item .amount{color:#333333;font-size:30rpx;}
.item .txt{color:#383838;font-size:26rpx;margin-top: 5rpx}
.vnumber{position: absolute;width: 100%;left: 0;bottom: 40rpx;text-align: center;color: #999;font-size: 22rpx;}

.modal{position:fixed;top:0;left:0;right:0;bottom:0;width:100%;height:100%;background:rgba(0,0,0,0.5);z-index:999999999;}
.mCon{width:540rpx;height:420rpx;position:absolute;top:50%;left:50%;margin-top:-250rpx;margin-left:-270rpx;background:#fff;border-radius:20rpx;}
.logo{width: 150rpx; height: 150rpx;display: block;}
button{color: #ffffff;font-size: 28rpx;padding: 0;margin-top: 40rpx;width: 300rpx;height: 72rpx;display: block;background-color:#BE8531;}